package pages;

import org.openqa.selenium.By;
import org.openqa.selenium.WebDriver;
import org.openqa.selenium.WebElement;

public class LoginFormPage {

	WebDriver navegador;
	WebElement formLogin;
	
	public LoginFormPage(WebDriver navegador) {
		this.navegador = navegador;
	}
	
	public LoginFormPage whiteLogin(String login) {
		
		formLogin  = navegador.findElement(By.id("signinbox"));
		
		formLogin.findElement(By.name("login")).sendKeys(login);
		
		return this;
	}
	
	public LoginFormPage whitePassword(String password) {
		
		navegador.findElement(By.id("signinbox")).findElement(By.name("password")).sendKeys(password);
		
		return this;
	}
	
	public void clickLogin() {
		navegador.findElement(By.linkText("SIGN IN")).click();
	}
}
